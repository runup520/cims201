
<% provide(:title, "用户注册") %>


<div class="row">
  <div class="span4 offset4">
    <%= form_for(@user) do |f| %>   
      <%= render 'shared/error_messages' %>
      <h3 align="center">注册</h3>
      <%= f.label :名字 %>
      <%= f.text_field :name %>

      <%= f.label :邮件 %>
      <%= f.text_field :email %>

      <%= f.label :密码 %>
      <%= f.password_field :password %>

      <%= f.label :密码确认%>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "注册", class: "btn btn-large btn-primary" %>
      <p><%= link_to "返回登录" , signin_path %></p>

    <% end %>
  </div>

</div>




